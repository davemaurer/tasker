<%= render 'partials/topbar_new_list' %>
<br>
<div class="large-6 large-centered columns">
  <div class="card">
    <div class="content">
      <div class="form-card">
        <%= form_for(@list) do |f| %>
          <label for="list_title">List Name</label>
          <%= f.text_field :title %>
          <br>
          <% if @list.id %>
            <%= f.submit "Edit", class: "button round small", method: :put %>
          <% else %>
            <%= f.submit "Create", class: "button round medium" %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
