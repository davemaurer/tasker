<div class="large-6 large-centered columns">
  <div class="card">
    <div class="content">
      <div class="form-card">
        <%= form_for([@list, @task]) do |f| %>
          <label for="task_title">Task</label>
          <%= f.text_field :title %>
          <label for="task_description">Description</label>
          <%= f.text_area :description %>
          <label for="task_duedate">Due Date</label>
          <%= f.date_field :duedate %>
          <label for="task_tag">Tags</label>
          <%= f.text_field :tag_list %>
          <br>
          <%= f.submit "Create", class: "button round medium" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
