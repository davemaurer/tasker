<%= render 'partials/topbar_archive' %>
<br>
<div class="row">
  <div class="large-8 columns">
    <h3>
      <div class="dash4">Tasks Tagged with <%= @tag.name %></div>
    </h3>
    <br>
      <ul class="no-bullet">
        <% @tag.tasks.each do |task| %>
          <h4><li><%= link_to task.title, lists_path %>, which belongs to the list: <%= task.list.title %></li></h4>
        <% end %>
      </ul>
  </div>
</div>
